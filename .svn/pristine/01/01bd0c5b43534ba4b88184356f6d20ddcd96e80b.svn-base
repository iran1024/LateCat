<Window x:Class="LateCat.Views.ScreenLayoutView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LateCat.Views"        
        xmlns:p = "clr-namespace:LateCat.Properties"       
        mc:Ignorable="d" 
        WindowStyle="ToolWindow"
        d:DesignHeight="600" d:DesignWidth="600"
        Title="Static" 
        Height="600" Width="600" MinWidth="600" MinHeight="600"        
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="175" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="选择屏幕" Margin="15, 5, 0, 0" />
        <Grid Width="400" Height="400">
            <ListView HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5, 5, 5, 5" ItemsSource="{Binding MonitorItems}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="192" Height="108">
                            <Image Source="{Binding MonitorImagePath}" Stretch="UniformToFill" Opacity="0.5" />
                            <Viewbox Width="192" Height="108">
                                <TextBlock Text="{Binding MonitorTitle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Viewbox>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <StackPanel Grid.Row="1" HorizontalAlignment="Left" Margin="15, 5, 5, 5" MinWidth="400">
            <TextBlock Text="{x:Static p:Resources.TitleWallpaperLayout}" FontSize="15"/>

            <RadioButton GroupName="Arrangement">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{x:Static p:Resources.TextWallpaperLayoutPerMonitor}"/>
                    <TextBlock Text="{Binding SelectedItem.Monitor.DeviceNumber, StringFormat=' ( {0} ) '}" Foreground="Black" FontWeight="Bold"/>
                </StackPanel>
            </RadioButton>
            <RadioButton GroupName="Arrangement" Content="{x:Static p:Resources.TextWallpaperLayoutSpan}"/>
            <RadioButton GroupName="Arrangement" Content="{x:Static p:Resources.TextWallpaperLayoutDuplicate}"/>
            
            <TextBlock Margin="0,10,0,0" FontSize="12" Foreground="Black" TextWrapping="Wrap" 
                       Text="{x:Static p:Resources.TipWallpaperLayout}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15, 0, 15, 40">
            <Button Content="{x:Static p:Resources.TextCustomiseWallpaper}" MaxWidth="160" Width="160" Margin="0, 5, 0, 0" Command="{Binding CustomiseWallpaperCommand}"/>
            <Button Content="{x:Static p:Resources.TextCloseWallpapers}" MaxWidth="160" Width="160" Margin="0, 5, 0, 0" Command="{Binding CloseWallpaperCommand}"/>
        </StackPanel>
    </Grid>
</Window>
