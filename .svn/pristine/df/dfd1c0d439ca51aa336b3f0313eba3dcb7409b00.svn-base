<Window        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:LateCat"
        xmlns:p = "clr-namespace:LateCat.Properties"        
        xmlns:control="clr-namespace:LateCat.Controls"
        xmlns:Helpers="clr-namespace:LateCat.Helpers" xmlns:views="clr-namespace:LateCat.Views" x:Name="WndMain" x:Class="LateCat.MainWindow"
        mc:Ignorable="d"
        Height="666" Width="999" ResizeMode="NoResize" Title="{x:Static p:Resources.TitleAppName}"                
        Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" Closing="WndMain_Closing" >
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="30"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <materialDesign:ColorZone Mode="PrimaryMid" VerticalAlignment="Top" Margin="0" Padding="5" materialDesign:ShadowAssist.ShadowDepth="Depth0" ClipToBounds="False" MouseDown="ColorZone_MouseDown">
            <StackPanel Orientation="Horizontal">
                <Button Height="35" Width="35" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFloatingActionButton}" WindowChrome.IsHitTestVisibleInChrome="True" x:Name="BtnSettings" Margin="10" Cursor="Hand" Click="BtnSettings_Click" Focusable="False"  >
                    <materialDesign:PackIcon Kind="Settings" Height="25" Width="25" Cursor="Hand" Focusable="False" />
                </Button>
                
                <!--Left-->
                <Button Height="35" Width="35" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignIconButton}" WindowChrome.IsHitTestVisibleInChrome="True" x:Name="BtnPrev" Margin="377, 0, 0, 0" Cursor="Hand" Command="{Binding PreviousCommand}" Foreground="White"  Focusable="False" >
                    <materialDesign:PackIcon Kind="ArrowLeftThick" Height="30" Width="30" Cursor="Hand" />
                </Button>
                
                <!--Switch-->
                <Button Height="35" Width="35" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignIconButton}" WindowChrome.IsHitTestVisibleInChrome="True" x:Name="BtnSwitch" Margin="10, 0, 0, 0" Cursor="Hand" Command="{Binding SwitchCommand}" Focusable="False"  >
                    <materialDesign:PackIcon Kind="Cat" Height="30" Width="30" Cursor="Hand" Foreground="White" />
                </Button>
                
                <!--Next-->
                <Button Height="35" Width="35" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignIconButton}" WindowChrome.IsHitTestVisibleInChrome="True" x:Name="BtnNext" Margin="10, 0, 0, 0" Cursor="Hand" Command="{Binding NextCommand}" Focusable="False" Foreground="White">
                    <materialDesign:PackIcon Kind="ArrowRightThick" Height="30" Width="30" Cursor="Hand" Foreground="White" />
                </Button>

                <Button Style="{StaticResource MaterialDesignIconButton}" x:Name="BtnStatus" Height="42" Width="42" Margin="335, 0, 0, 0" WindowChrome.IsHitTestVisibleInChrome="True" HorizontalAlignment="Right" Click="BtnStatus_Click" ToolTip="{x:Static p:Resources.TitleMonitorLayout}" Cursor="Hand" Focusable="False" Foreground="White" >
                    <materialDesign:PackIcon Kind="MonitorMultiple" Height="25" Width="25" Cursor="Hand" />
                </Button>
                <Button Height="35" Width="35" Style="{StaticResource MaterialDesignIconButton}" WindowChrome.IsHitTestVisibleInChrome="True" 
                        x:Name="BtnClose" Margin="10, 0, 0, 0" Cursor="Hand" Click="BtnClose_Click" Focusable="False" Foreground="White" >
                    <materialDesign:PackIcon Kind="CloseThick" Height="25" Width="25" Cursor="Hand" />
                </Button>
            </StackPanel>
        </materialDesign:ColorZone>

        <control:Loading x:Name="Loading"  Visibility="Collapsed"></control:Loading>

        <Frame x:Name="Frame" Source="WallpaperListView.xaml" VerticalAlignment="Top" Margin="0, 65, 0, 0" Focusable="False" >
            
        </Frame>

    </Grid>

</Window>
